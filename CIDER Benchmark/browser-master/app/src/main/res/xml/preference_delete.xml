<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="sp_clear_quit"
        android:defaultValue="true"
        android:title="@string/clear_title_quit"/>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="sp_clearIndexedDB"
        android:title="@string/localData" />

    <CheckBoxPreference
        android:key="sp_clear_cache"
        android:defaultValue="true"
        android:title="@string/clear_title_cache"/>

    <CheckBoxPreference
        android:key="sp_clear_history"
        android:defaultValue="false"
        android:title="@string/clear_title_history"/>

    <CheckBoxPreference
        android:key="sp_clear_cookie"
        android:defaultValue="false"
        android:title="@string/clear_title_cookie"
        android:summary="@string/setting_summary_cookie_delete"/>

    <Preference android:key="sp_deleteDatabase"
        android:title="@string/clear_title_deleteDatabase"
        android:summary="@string/clear_summary_deleteDatabase"/>

</PreferenceScreen>