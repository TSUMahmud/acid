<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/packageIcon" android:layout_width="40dp" android:layout_height="40dp" android:scaleType="fitXY" android:layout_alignParentStart="true"/>
    <TextView android:textSize="20dp" android:id="@+id/packageName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    <ImageView android:id="@+id/packageClock" android:layout_width="40dp" android:layout_height="40dp" android:scaleType="fitXY" android:layout_alignParentEnd="true"/>
</RelativeLayout>
