<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <PreferenceScreen android:persistent="false" android:title="@string/mi2_prefs_button_actions" android:key="screen_button_actions" android:summary="@string/mi2_prefs_button_actions_summary">
        <PreferenceCategory android:title="@string/mi2_prefs_button_action"/> public static final String PREF_BUTTON_ACTION_PRESS_DELAY = &quot;button_action_press_count_delay&quot;; 
        <SwitchPreference android:title="@string/mi2_prefs_button_action" android:key="button_action_enable" android:summary="@string/mi2_prefs_button_action_summary" android:defaultValue="false"/>
        <SwitchPreference android:title="@string/mi2_prefs_button_action_vibrate" android:key="button_action_vibrate" android:summary="@string/mi2_prefs_button_action_vibrate_summary" android:dependency="button_action_enable" android:defaultValue="false"/>
        <ListPreference android:entries="@array/button_action_options" android:title="@string/prefs_button_single_press_action_selection_title" android:key="button_single_press_action_selection" android:summary="%s" android:dependency="button_action_enable" android:defaultValue="@string/pref_button_action_disabled_value" android:entryValues="@array/button_action_values"/>
        <ListPreference android:entries="@array/button_action_options" android:title="@string/prefs_button_double_press_action_selection_title" android:key="button_double_press_action_selection" android:summary="%s" android:dependency="button_action_enable" android:defaultValue="@string/pref_button_action_disabled_value" android:entryValues="@array/button_action_values"/>
        <ListPreference android:entries="@array/button_action_options" android:title="@string/prefs_button_triple_press_action_selection_title" android:key="button_triple_press_action_selection" android:summary="%s" android:dependency="button_action_enable" android:defaultValue="@string/pref_button_action_disabled_value" android:entryValues="@array/button_action_values"/>
        <PreferenceCategory android:title="@string/prefs_button_variable_actions">
            <EditTextPreference android:title="@string/mi2_prefs_button_press_count" android:key="button_action_press_count" android:summary="@string/mi2_prefs_button_press_count_summary" android:dependency="button_action_enable" android:defaultValue="6" android:inputType="number"/>
            <EditTextPreference android:title="@string/mi2_prefs_button_press_broadcast" android:key="button_action_broadcast" android:summary="@string/mi2_prefs_button_press_broadcast_summary" android:dependency="button_action_enable" android:defaultValue="@string/mi2_prefs_button_press_broadcast_default_value"/>
            <EditTextPreference android:title="@string/mi2_prefs_button_press_count_max_delay" android:key="button_action_press_max_interval" android:summary="@string/mi2_prefs_button_press_count_max_delay_summary" android:dependency="button_action_enable" android:defaultValue="2000" android:inputType="number"/>
        </PreferenceCategory>
    </PreferenceScreen>
</androidx.preference.PreferenceScreen>
