<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="?android:attr/activatedBackgroundIndicator" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="1dp">
    <ImageView android:id="@+id/item_image" android:layout_width="8dp" android:layout_height="8dp" android:contentDescription="@string/candidate_item_device_image" android:layout_alignParentStart="true"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:paddingStart="2dp" android:paddingEnd="2dp" android:layout_toEndOf="@+id/item_image">
        <TextView android:textSize="12sp" android:textColor="@color/secondarytext" android:id="@+id/item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Item Name" android:scrollHorizontally="false" android:singleLine="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/secondarytext" android:id="@+id/item_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Item Description"/>
    </LinearLayout>
</RelativeLayout>
